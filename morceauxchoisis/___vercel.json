{
  "version": 2,
  "projects": {
    "frontend": {
      "root": "frontend"
    },
    "backend": {
      "root": "backend"
    }
  },
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "backend/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "backend/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
